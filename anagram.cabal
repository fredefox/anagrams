  default-language:    Haskell2010
  other-modules:       Anagram, TrieBuilder

test-suite tests
  type:                exitcode-stdio-1.0
  main-is:             Test.hs
  build-depends:       base,
                       containers,
                       QuickCheck == 2.8.*,
                       HUnit == 1.3.*
  other-modules:       Anagram, TrieBuilder
  hs-source-dirs:      src, test
  default-language:    Haskell2010
