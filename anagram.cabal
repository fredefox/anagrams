build-type:            Simple
cabal-version:         >=1.10

executable anagram
  main-is:             Main.hs
  build-depends:       base == 4.9.*,
                       containers == 0.5.*,
                       optparse-applicative == 0.12.*,
                       text == 1.2.*,
